<%- include('partials/head'); %> <%- include('partials/nav'); %>

<section id="mainContent">
  <section id="chat">
    <ul>
      <li class="speechOba">
        <p>
          Welkom, ik ben obaAssistent. Graag help ik je verder met het vinden
          van informatie.
        </p>
      </li>
      <li class="speechOba fallbackTyping">
        <p>obaAssistent is aan het typen . . .</p>
      </li>
      <li id="speechBtnCateg" class="speechOba">
        <p>Klik hieronder voor meer informatie uit de catalogus</p>
        <div class="buttonContainer">
          <button tabindex="0">Activiteiten</button>
          <button tabindex="0">Boeken</button>
          <button tabindex="0">Cursus</button>
          <button tabindex="0">DvD's</button>
        </div>
      </li>
      <li id="speechInfoQ" class="speechOba">
        <p>Stel een vraag, bijvoorbeeld:</p>
        <div class="buttonContainer">
          <button tabindex="0" id="btnBook">Ik zoek een boek</button>
        </div>
      </li>
    </ul>
    <span class="fallback"></span>
    <div class="results-container">
      <div id="searchResults"></div>
      <button id="loadMoreButton">meer resultaten laden</button>
      <div id="itemDetails"></div>
    </div>
    <%- include('partials/loading'); %>
  </section>
  <form id="searchForm">
    <input
      type="text"
      name="query"
      placeholder="Waar ben je naar op zoek?"
      id="query"
    />
    <div class="buttonContainer">
      <button tabindex="0" type="submit" id="searchButton" class="fa">
        &#xf1d9;
      </button>
    </div>
  </form>
  <%- include('partials/footer'); %>
</section>
