<%- include('partials/head'); %>
  <h1>test</h1>
  <h2>Results</h2>
  <%- include('partials/nav'); %>

    <section id="mainContent">
      <section id="chat">
        <h3>Stel een vraag</h3>
        <ul>
          <li class="speechOba">
            <p>Welkom, ik ben obaAssistent.
              Graag help ik je verder met het vinden van informatie</p>
          </li>
          <li class="speechOba fallbackTyping">
            <p>obaAssistent is aan het typen</p>
          </li>
          <li id="speechBtnCateg" class="speechOba">
            <p>Klik hieronder voor meer informatie uit de catalogus</p>
            <button type="button" class="searchButton" id="activiteitenButton"
              data-category="activiteiten">Activiteiten</button>
            <button type="button" class="searchButton" id="bookButton" data-category="boeken">Boeken</button>
            <button type="button" class="searchButton" id="randomDvdButton" data-category="dvds">DvD's</button>
            <button type="button" class="searchButton" id="cursusButton" data-category="cursussen">Cursussen</button>
          </li>
          <li id="speechInfoQ" class="speechOba">
            <p>Stel een vraag, bijvoorbeeld:</p>
            <button id="btnBook">Ik zoek een boek</button>
          </li>
          <li class="showResult speechUser">
            <p>Ik zoek een boek</p>
          </li>
          <li>
            <div class="categories">
              <div class="category-container" id="boekenContainer">
                <h3>boeken</h3>
                <div class="results-container" id="boekenResults"></div>
              </div>
              <div class="category-container" id="dvdsContainer">
                <h3>dvd's</h3>
                <div class="results-container" id="dvdsResults"></div>
              </div>
              <div class="category-container" id="activiteitenContainer">
                <h3>activiteiten</h3>
                <div class="results-container" id="activiteitenResults"></div>
              </div>
              <div class="category-container" id="cursussenContainer">
                <h3>cursussen</h3>
                <div class="results-container" id="cursussenResults"></div>
              </div>
            </div>
          </li>
        </ul>
        <span class="fallback"></span>
        <form id="searchForm">
          <input type="text" name="query" placeholder="What would you like to find" id="query" />
          <button type="submit" id="searchButton">Search</button>
        </form>
        <%- include('partials/loading'); %>
          <div id="searchResults"></div>
      </section>
      <%- include('partials/footer'); %>